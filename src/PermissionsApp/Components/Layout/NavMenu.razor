@using System.Configuration
@using CleveCoding.Kernel.Options
@using Microsoft.Extensions.Options

@inject IConfiguration Configuration
@inject IOptions<ApplicationInfoOption> AppInfo

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand text-info py-0 text-uppercase" href="">
            <span>Permissions</span> <span class="text-white">Package</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable position-relative" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                Home
            </NavLink>
        </div>
    </nav>

    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/management" Match="NavLinkMatch.All">
                Management
            </NavLink>
        </div>
    </nav>
    <code class="enviroment-text position-absolute bottom-0 start-0 m-3 text-muted">
        @Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT")
    </code>
    <code class="version-text position-absolute bottom-0 end-0 m-3 text-muted">
        @AppInfo.Value.Version
    </code>
</div>

