<small class="text-muted">Found @(Datasource?.Count() ?? 0) roles.</small>
<ol class="list-group list-group-numbered">
    @foreach (var role in Datasource ?? [])
    {
        <li class="list-group-item d-flex justify-content-between align-items-start @SelectedCssClass?.Invoke(role)" @onclick="x => OnRoleChange(role)">
            <div class="ms-2 me-auto">
                @role
            </div>
        </li>
    }
</ol>

@code {

    [Parameter, EditorRequired]
    public IEnumerable<string>? Datasource { get; set; }

    [Parameter, EditorRequired]
    public Func<string, Task> OnRoleChange { get; set; } = null!;

    [Parameter]
    public Func<string, string?>? SelectedCssClass { get; set; }

}
